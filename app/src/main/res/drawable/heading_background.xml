<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient Background -->
    <gradient
        android:startColor="#3C3C83"
        android:endColor="#B2BAE7"
        android:angle="90" />

    <!-- Rounded Corners -->
    <corners
        android:radius="16dp" />

    <!-- Padding Inside the Shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
